html, body
  margin 0
  padding 0
  height 100%
  width 100%

h1, h2
  text-align center

ul
  list-style-type none

li
  display block

a
  text-decoration none

  &:link, &:visited, &:hover, &:active
    color inherit
#app
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  box-sizing border-box
  color #2c3e50
  width 100%
  height 100%
